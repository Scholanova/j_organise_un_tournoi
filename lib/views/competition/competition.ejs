<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	<meta name="viewport" content="width=device-width,initial-scale=1.0">
	<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
	<link href='https://fonts.googleapis.com/css?family=Holtwood+One+SC' rel='stylesheet' type='text/css'>
	<link href='https://fonts.googleapis.com/css?family=Kaushan+Script|Herr+Von+Muellerhoff' rel='stylesheet' type='text/css'>
	<link href='https://fonts.googleapis.com/css?family=Abel' rel='stylesheet' type='text/css'>
	<link href='https://fonts.googleapis.com/css?family=Istok+Web|Roboto+Condensed:700' rel='stylesheet' type='text/css'>
    <link rel='stylesheet' href='/stylesheets/stylebracket.css' />

		<title>My Play Off</title>
    </head>
    <body>
    	<header class="hero">
        <div class="hero-wrap">
         <p class="intro" id="intro">Equipe 1 Make It</p>
    		 <h1 id="headline">Tournament</h1>
    		 <p class="year"><i class="fa fa-star"></i> 2020 <i class="fa fa-star"></i></p>
         <p>Les Matchs</p>
       </div>
    	</header>

		
    	<section id="bracket">
    	<div class="container" >
    	<div class="split split-one">
			<% var nbroundPre = 0,nbroundActual=1,nbParticipant=competitions.nb_participant,nbMatchFinRound %>
			<% competitions.Matches.forEach((match,key) => { %>
				<% if (nbroundActual != nbroundPre) { %>
					<% nbMatchFinRound = (nbroundPre==0)  ? nbParticipant/2 : nbMatchFinRound + nbMatchFinRound/2 %>
					<%- include('../template/round.ejs',{nbroundActual: nbroundActual}) %>
					<% nbroundPre ++ %>
				<% } %> 

				<%- include('../template/matchup.ejs', {match: match}) %>

				<% if(nbMatchFinRound == key+1) { %>
					</div>
					<% nbroundActual ++ %>
				<% } %>
			<% }) %>
    	</div>

    <div class="champion">

    		<div class="final">
    			<i class="fa fa-trophy"></i>
    			<div class="round-details">Vainqueur du tournoi <br/></div>
    			<ul class ="matchup championship">
					<%if(competitions.vainqueur===competitions.Matches[competitions.Matches.length - 1].player1.id){%>
							<li class="team team-top"><%=competitions.Matches[competitions.Matches.length - 1].player1.name%></li>
					<%}%>
					<%if(competitions.vainqueur===competitions.Matches[competitions.Matches.length - 1].player2.id){%>
							<li class="team team-top"><%=competitions.Matches[competitions.Matches.length - 1].player2.name%></li>
					<%}%>
				</ul>
    		</div>

    	</div>



    	</div>
    	</section>
    	<section class="share">
    			<div class="share-wrap">
    				<a class="share-icon" href="https://twitter.com/_joebeason"><i class="fa fa-twitter"></i></a>
    				<a class="share-icon" href="#"><i class="fa fa-facebook"></i></a>
    				<a class="share-icon" href="#"><i class="fa fa-envelope"></i></a>
    			</div>
    	</section>